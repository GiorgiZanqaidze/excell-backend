# ==================================
# APPLICATION CONFIGURATION
# ==================================

# Application Port
PORT=3000

# Node Environment (development, production, test)
NODE_ENV=development

# Application URL
APP_URL=http://localhost:3000

# ==================================
# DATABASE CONFIGURATION (MongoDB)
# ==================================


# Full Mongo connection string (recommended)
# MONGO_URI=mongodb://localhost:27017/excell_backend


# Docker defaults
# MONGO_URI=mongodb://mongo:27017/excell_backend

# ==================================
# JWT AUTHENTICATION (if needed)
# ==================================

# JWT Secret Key (generate a strong secret)
# JWT_SECRET=your-super-secret-jwt-key-here
# JWT_EXPIRES_IN=1d

# ==================================
# FILE UPLOAD CONFIGURATION
# ==================================

# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Allowed file types
ALLOWED_FILE_TYPES=.xlsx,.xls

# Upload directory
UPLOAD_DIR=uploads

# ==================================
# CORS CONFIGURATION
# ==================================

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==================================
# LOGGING CONFIGURATION
# ==================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log directory
LOG_DIR=logs

# ==================================
# EXCEL PROCESSING CONFIGURATION
# ==================================

# Maximum rows to process
MAX_EXCEL_ROWS=10000

# Maximum columns to process
MAX_EXCEL_COLUMNS=100

# Sheet name to process (if specific sheet needed)
# EXCEL_SHEET_NAME=Sheet1

# ==================================
# CACHE CONFIGURATION (if using Redis)
# ==================================

# Redis URL
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ==================================
# EMAIL CONFIGURATION (if needed)
# ==================================

# SMTP Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@yourapp.com

# ==================================
# RATE LIMITING
# ==================================

# Requests per minute per IP
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ==================================
# SECURITY
# ==================================

# API Key for protected endpoints (if needed)
# API_KEY=your-api-key-here

# Encryption key for sensitive data
# ENCRYPTION_KEY=your-encryption-key-here
